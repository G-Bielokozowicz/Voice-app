<Window x:Class="Projekt.PizzaSizeSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Pizza Size" Height="150" Width="250">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select Pizza Size:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbPizzaSize" Width="150" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Width="75" Margin="0,0,10,0" Click="BtnOk_Click"/>
                <Button Content="Cancel" Width="75" Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
