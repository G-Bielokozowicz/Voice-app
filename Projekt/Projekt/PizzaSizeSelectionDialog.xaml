<Window x:Class="Projekt.PizzaSizeSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Pizza Size" Height="180" Width="250">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select Pizza Size:" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel x:Name="sizePanel" Margin="0,0,0,10">
                <RadioButton Content="Mała" GroupName="PizzaSizeGroup" Checked="RadioButton_Checked" IsChecked="True"/>
                <RadioButton Content="Średnia" GroupName="PizzaSizeGroup" Checked="RadioButton_Checked"/>
                <RadioButton Content="Duża" GroupName="PizzaSizeGroup" Checked="RadioButton_Checked"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Width="75" Margin="0,0,10,0" Click="BtnOk_Click"/>
                <Button Content="Cancel" Width="75" Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
